# ===========================================
# E-COMMERCE MICROSERVICES - DEVELOPMENT ENVIRONMENT
# ===========================================

# Project Info
PROJECT_NAME=ecommerce-microservice
PROJECT_VERSION=0.0.1-SNAPSHOT
ENVIRONMENT=development

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ecommerce_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=dev_password

# Individual Database Names
USER_SERVICE_DB=user_service_dev_db
PRODUCT_CATALOG_DB=product_catalog_dev_db
ORDER_SERVICE_DB=order_service_dev_db
PAYMENT_SERVICE_DB=payment_service_dev_db
NOTIFICATION_SERVICE_DB=notification_service_dev_db

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# KAFKA CONFIGURATION
# ===========================================
KAFKA_HOST=localhost
KAFKA_PORT=9092
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Kafka KRaft Configuration
KAFKA_NODE_ID=1
KAFKA_PROCESS_ROLES=broker,controller
KAFKA_LISTENERS=PLAINTEXT://0.0.0.0:9092,CONTROLLER://0.0.0.0:9093
KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://localhost:9092
KAFKA_CONTROLLER_LISTENER_NAMES=CONTROLLER
KAFKA_LISTENER_SECURITY_PROTOCOL_MAP=CONTROLLER:PLAINTEXT,PLAINTEXT:PLAINTEXT
KAFKA_CONTROLLER_QUORUM_VOTERS=1@localhost:9093
KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR=1
KAFKA_TRANSACTION_STATE_LOG_REPLICATION_FACTOR=1
KAFKA_TRANSACTION_STATE_LOG_MIN_ISR=1
KAFKA_GROUP_INITIAL_REBALANCE_DELAY_MS=0
KAFKA_NUM_PARTITIONS=3

# ===========================================
# SERVICE DISCOVERY
# ===========================================
EUREKA_HOST=localhost
EUREKA_PORT=8761
EUREKA_URL=http://localhost:8761/eureka/

# ===========================================
# SERVICE PORTS
# ===========================================
API_GATEWAY_PORT=8080
EUREKA_SERVER_PORT=8761
USER_SERVICE_PORT=8081
PRODUCT_CATALOG_PORT=8082
SHOPPING_CART_PORT=8083
ORDER_SERVICE_PORT=8084
PAYMENT_SERVICE_PORT=8085
NOTIFICATION_SERVICE_PORT=8086

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
JWT_SECRET=dev_secret_key_for_development_only_do_not_use_in_production
JWT_EXPIRATION=86400000

# ===========================================
# EMAIL CONFIGURATION (for Notification Service)
# ===========================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=dev-email@gmail.com
MAIL_PASSWORD=dev-app-password
MAIL_SMTP_AUTH=true
MAIL_SMTP_STARTTLS_ENABLE=true

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL_ROOT=DEBUG
LOG_LEVEL_APP=DEBUG

# ===========================================
# DEVELOPMENT FLAGS
# ===========================================
SPRING_PROFILES_ACTIVE=dev
DEBUG_MODE=true
SWAGGER_ENABLED=true

# ===========================================
# DEVELOPMENT SPECIFIC SETTINGS
# ===========================================
ENABLE_H2_CONSOLE=true
ENABLE_ACTUATOR_ENDPOINTS=true
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200
